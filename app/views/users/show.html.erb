
<div class="container clearfix">
  
  <div class="content">
    <%= image_tag @user.avatar,width:"300px",height:"300px",class: "img-rounded"%>
  </div>
  <div class="content">
      <h3><%= @user.name %></h3>
      <p><%= @user.email %></p>
      <p><%= @user.intro %></p>
      <% if @user.email == current_user.email %>
        <button type="button" class="btn btn-default"><%= link_to "Edit", edit_user_path %></button>
      <% end %>

  </div>

</div>
<br>
<br>
<div class="container">
  <div class="panel panel-default col-xs-12 col-sm-4 col-md-3">
    <div class="panel-heading">
      <h3 class="panel-title"><strong><%= @user.followings.count %></strong> Following</h3>
    </div>
    <div class="panel-body">
      <% @user.followings.each do |following| %>
        <%= link_to user_path(following) do %>
        <div class="my-restaurant">
          <div>
            <%= image_tag following.avatar,height: "150", width: "100", class: "img-circle" %>
            
          </div>
          <h5><%= following.name %></h5>
        </div>
        <%end%>
      <% end %>
    </div>
  </div>

  <div class="panel panel-default col-xs-12 cols-sm-8 col-md-9">
    <div class="panel-heading">
      <h3 class="panel-title"><strong><%= @commented_restaurants.count %></strong> Commented Restaurants</h3>
    </div>
    <div class="panel-body">
      <% @commented_restaurants.each do |restaurant| %>
        <%= link_to restaurant_path(restaurant) do %>
          <div class="my-restaurant">
            <div>
              <%= image_tag restaurant.image, class: "img-rounded" %>
            </div>
            <h5><%= restaurant.name %></h5>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

