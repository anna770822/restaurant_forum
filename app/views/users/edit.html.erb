<div class="container">

  <div class="form-container">

  <%= form_for @user do |f| %>

    <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, placeholder: "@user.name", class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :intro, "Intro" %>
    <%= f.text_area :intro, placeholder: "@user.intro" ,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.file_field :avatar %>
      <%= image_tag @user.avatar if @user.avatar? %>
    </div>
    <div class="form-group">
      <%= f.submit %>
    </div>
  <%end%>

  </div>
</div>