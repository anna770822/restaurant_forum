  <div class="container">
    <div class="restaurant-container">
      <div class="restaurant-content ">
        
          <%= image_tag @restaurant.image,width:"100%",class:"img-thumbnail" %>
        
      </div>
      <div class="restaurant-content">
        <div class="restaurant-inner">
          <h3><%= @restaurant.name %></h3>
        </div>
        <table class="table">
          <tr>
            <td>
              TEL : <%= @restaurant.tel %>
            </td>
          </tr>
          <tr>
            <td>
            Address : <%= @restaurant.address %>
            </td>
          </tr>
          <tr>
            <td>
              Opening Hours : <%= @restaurant.opening_hours %>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <div class="well well-lg restaurant-description">
      <%= @restaurant.description %>
    </div>
    <br>
    <br>
    <div class="edit-btn">
       <button type="button" class="btn btn-default"><%= link_to "Back to Index",admin_restaurants_path %></button>
      <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_admin_restaurant_path(@restaurant)%></button>
      <button type="button" class="btn btn-default"><%= link_to 'Delete', admin_restaurant_path(@restaurant), method: :delete, data:{confirm:'Are you sure?'}%></button>
    </div>

</div>