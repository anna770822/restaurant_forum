
<div class="container text-center">
  <h3>Restaurant Back End </h3>
  <button type="button" class="btn btn-default"><%= link_to 'New Restaurant', new_admin_restaurant_path %>
  </button>
  <button type="button" class="btn btn-default"><%= link_to 'Categories', admin_categories_path %></button>
  <br>
  <br>
  <table class="table table-striped table-hover text-center container_table">
    <% i = 1 %>
    <% @restaurants.each do |restaurant|%>
    <tr>
          <td class="container_table_cell">
              <%= i %>
          </td>
          <td class="container_table_cell">
              <%= restaurant.category.name %>
          </td>
          <td><%= image_tag restaurant.image, class: "img-thumbnail",width: "150px" %></td>

          <td class="container_table_cell"><%= restaurant.name.capitalize %></td>

          <td class="container_table_button"><button type="button" class="btn btn-default"><%= link_to 'Show', admin_restaurant_path(restaurant) %></button></td>
   
          <td class="container_table_button"><button type="button" class="btn btn-default"><%= link_to 'Edit', edit_admin_restaurant_path(restaurant)%></button></td>
      
          <td class="container_table_button"><button type="button" class="btn btn-default"><%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data:{confirm:'Are you sure?'}%></button></td>
          <% i +=1 %>
    </tr>
    <% end %>
  </table>
</div>
<div class="container text-center">
  <%= paginate @restaurants %>
</div>


