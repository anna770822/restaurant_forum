<div class="container">
  <div class="row">
    <%= render partial: "shared/navbar" %>
    <h1>Top 10 Restaurants </h1>
      <% i = 1 %>
      <% @top_10_restaurants.each do |restaurant| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="restaurant-item">
            <%= link_to(image_tag(restaurant.image),restaurant_path(restaurant), class: "img-responsive enter-block") %>
          
            <div class="caption">
              <h3><%= i %>  <%= restaurant.name %></h3>
              <p class="favorited_count">Favorited By :
                <% if restaurant.favorites_count != 0 %>
                  <%= restaurant.favorites_count %>
                <%else%>
                  <%= 0 %>
                <%end%>
              </p>
              <p><%= truncate(restaurant.description, length: 80) %></p>
              
              <p><%= render partial: "shared/favorite", locals: {restaurant: restaurant} %> <%= render partial: "shared/like", locals: {restaurant: restaurant}%></p>
            </div>
          </div>
        </div>
        <% i += 1 %>
      <% end %>


  </div>
</div>
